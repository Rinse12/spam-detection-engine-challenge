{
  "name": "@plebbit/spam-detection-server",
  "version": "0.0.0",
  "description": "HTTP server for the Plebbit spam detection engine",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "start": "node dist/index.js",
    "dev": "node --import tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@plebbit/plebbit-js": "https://github.com/plebbit/plebbit-js#3a70ec2b97a4fe2ed53f7746d69e9ec6a00dc324",
    "@plebbit/spam-detection-shared": "0.0.0",
    "better-sqlite3": "12.6.0",
    "fastify": "5.6.2",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "7.6.13",
    "@types/node": "22.15.21",
    "tsx": "4.19.4",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  }
}
