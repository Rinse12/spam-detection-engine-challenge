{
    "name": "@easy-community-spam-blocker/challenge",
    "version": "0.0.0",
    "description": "EasyCommunitySpamBlocker challenge implementation for Plebbit",
    "type": "module",
    "engines": {
        "node": ">=22"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "package.json"
    ],
    "publishConfig": {
        "access": "public"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "node esbuild.config.js && tsc -p tsconfig.json --emitDeclarationOnly",
        "clean": "rm -rf dist",
        "test": "vitest run"
    },
    "dependencies": {
        "@noble/ed25519": "1.7.5",
        "@plebbit/plebbit-js": "https://github.com/plebbit/plebbit-js#8e7d818688d0b4aab2ce6271b271167a4eb75225",
        "@plebbit/plebbit-logger": "github:plebbit/plebbit-logger#355a96d7659ed820047980049dfa627d30d83a69",
        "cborg": "4.3.2",
        "i18n-iso-countries": "7.14.0",
        "uint8arrays": "5.1.0",
        "zod": "4.3.5"
    },
    "devDependencies": {
        "@easy-community-spam-blocker/shared": "file:../shared",
        "esbuild": "^0.27.2",
        "typescript": "5.9.3",
        "vitest": "4.0.16"
    }
}
