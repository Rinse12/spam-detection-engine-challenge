{
    "name": "@easy-community-spam-blocker/shared",
    "version": "0.0.0",
    "description": "Shared types for EasyCommunitySpamBlocker",
    "type": "module",
    "engines": {
        "node": ">=22"
    },
    "main": "dist/types.js",
    "types": "dist/types.d.ts",
    "files": [
        "dist",
        "package.json"
    ],
    "publishConfig": {
        "access": "public"
    },
    "exports": {
        ".": {
            "types": "./dist/types.d.ts",
            "import": "./dist/types.js",
            "require": "./dist/types.js"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "i18n-iso-countries": "7.14.0",
        "zod": "4.3.5"
    },
    "devDependencies": {
        "typescript": "5.9.3"
    }
}
