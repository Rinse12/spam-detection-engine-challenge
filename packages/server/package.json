{
    "name": "@easy-community-spam-blocker/server",
    "version": "0.0.0",
    "description": "HTTP server for EasyCommunitySpamBlocker",
    "type": "module",
    "engines": {
        "node": ">=22"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "package.json"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "node esbuild.config.js && tsc -p tsconfig.json --emitDeclarationOnly",
        "clean": "rm -rf dist",
        "start": "node --env-file=.env dist/index.js",
        "dev": "node --env-file=.env --import tsx src/index.ts",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "dependencies": {
        "@easy-community-spam-blocker/shared": "0.0.0",
        "@noble/ed25519": "1.7.5",
        "@plebbit/plebbit-js": "https://github.com/plebbit/plebbit-js#a21d896bd55c76070758dae65dc0693d1c3726db",
        "arctic": "^3.7.0",
        "better-sqlite3": "12.6.0",
        "cborg": "4.3.2",
        "fastify": "5.6.2",
        "jose": "6.0.11",
        "uint8arrays": "5.1.0",
        "zod": "4.3.5"
    },
    "devDependencies": {
        "@types/better-sqlite3": "7.6.13",
        "@types/node": "22.15.21",
        "esbuild": "^0.27.2",
        "pino-pretty": "^13.1.3",
        "tsx": "4.19.4",
        "typescript": "5.9.3",
        "vitest": "4.0.16"
    }
}
